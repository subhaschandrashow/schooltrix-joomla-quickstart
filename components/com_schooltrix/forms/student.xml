<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields>
		<fieldset>
			<field
				name="id"
				type="hidden"
				label="COM_SCHOOLTRIX_ID_LABEL"
				size="10"
				default="0"
				readonly="true"
			/>

			<field
				name="admission_type"
				type="list"
				label="COM_SCHOOLTRIX_ADMISSION_TYPE_LABEL"
				default="0"
				validate="options"
				>
				<option value="0">COM_SCHOOLTRIX_ADMISSION_TYPE_NEW</option>
				<option value="1">COM_SCHOOLTRIX_ADMISSION_TYPE_EXISTING</option>
			</field>

			<field
				name="admission_category"
				type="list"
				label="COM_SCHOOLTRIX_ADMISSION_CATEGORY_LABEL"
				default="0"
				validate="options"
				>
				<option value="0">COM_SCHOOLTRIX_ADMISSION_CATEGORY_REGULAR</option>
				<option value="1">COM_SCHOOLTRIX_ADMISSION_CATEGORY_MANAGEMENT</option>
			</field>
		</fieldset>

		<fieldset name="personal" label="COM_CONTENT_FIELD_URLS_OPTIONS">
			<field
				name="firstname"
				type="text"
				label="COM_SCHOOLTRIX_STUDENT_FIRSTNAME_LABEL"
				default=""
			/>

			<field
				name="middlename"
				type="text"
				label="COM_SCHOOLTRIX_STUDENT_MIDDLENAME_LABEL"
				default=""
			/>

			<field
				name="lastname"
				type="text"
				label="COM_SCHOOLTRIX_STUDENT_LASTNAME_LABEL"
				default=""
			/>

			<field
				name="gender"
				type="list"
				label="COM_SCHOOLTRIX_STUDENT_GENDER_LABEL"
				default="0"
				validate="options"
				>
				<option value="">COM_SCHOOLTRIX_STUDENT_SELECT_GENDER</option>
				<option value="0">COM_SCHOOLTRIX_STUDENT_GENDER_MALE</option>
				<option value="1">COM_SCHOOLTRIX_STUDENT_GENDER_FEMALE</option>
			</field>

			<field
				name="dob"
				type="calendar"
				default="2017-05-15"
				label="COM_SCHOOLTRIX_STUDENT_DOB_LABEL"
				description=""
				class="input-small"
				required="true"
				filter="user_utc"
				showtime="false"
				todaybutton="false"
				filltable="false"
				translateformat="true"
			/>

			<field
				name="bloodgroup"
				type="list"
				label="COM_SCHOOLTRIX_STUDENT_BLOODGROUP_LABEL"
				default="0"
				validate="options"
				>
				<option value="">COM_SCHOOLTRIX_STUDENT_BLOODGROUP_SELECT</option>
				<option value="A">A</option>
				<option value="B">B</option>
			</field>

			<field
				name="religion"
				type="list"
				label="COM_SCHOOLTRIX_STUDENT_RELIGION_LABEL"
				default="0"
				validate="options"
				>
				<option value="">COM_SCHOOLTRIX_STUDENT_RELIGION_SELECT</option>
				<option value="hindu">COM_SCHOOLTRIX_STUDENT_RELIGION_HINDU</option>
				<option value="muslim">COM_SCHOOLTRIX_STUDENT_RELIGION_MUSLIM</option>
			</field>

			<field
				name="class"
				type="list"
				label="COM_SCHOOLTRIX_STUDENT_CLASS_LABEL"
				default="0"
				validate="options"
				>
				<option value="">COM_SCHOOLTRIX_STUDENT_CLASS_SELECT</option>
				<option value="nursery">COM_SCHOOLTRIX_STUDENT_CLASS_NURSERY</option>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
				<option value="6">6</option>
				<option value="7">7</option>
				<option value="8">8</option>
			</field>

			<field
				name="nationality"
				type="list"
				label="COM_SCHOOLTRIX_STUDENT_NATIONALITY_LABEL"
				default="0"
				validate="options"
				>
				<option value="">COM_SCHOOLTRIX_STUDENT_NATIONALITY_SELECT</option>
				<option value="indian">Indian</option>
			</field>

			<field
				name="primary_language"
				type="list"
				label="COM_SCHOOLTRIX_STUDENT_PRIMARY_LANGUAGE_LABEL"
				default="0"
				validate="options"
				>
				<option value="">COM_SCHOOLTRIX_STUDENT_PRIMARY_LANGUAGE_SELECT</option>
				<option value="bengali">Bengali</option>
				<option value="english">English</option>
				<option value="hindi">Hindi</option>
			</field>

			<field
				name="disability"
				type="list"
				label="COM_SCHOOLTRIX_STUDENT_DISABILITY_LABEL"
				default="0"
				validate="options"
				>
				<option value="">COM_SCHOOLTRIX_STUDENT_DISABILITY_SELECT</option>
				<option value="1">YES</option>
				<option value="0">NO</option>
			</field>

			<field
				name="avatar"
				type="file"
				label="COM_SCHOOLTRIX_STUDENT_AVATAR_LABEL"
				description=""
				size="10"
				accept="image/*"
			/>
		</fieldset>

		<fieldset name="parent" label="COM_CONTENT_FIELD_URLS_OPTIONS">
			<field
				name="mother_firstname"
				type="text"
				label="COM_SCHOOLTRIX_MOTHER_FIRSTNAME_LABEL"
				default=""
			/>

			<field
				name="mother_middlename"
				type="text"
				label="COM_SCHOOLTRIX_MOTHER_MIDDLENAME_LABEL"
				default=""
			/>

			<field
				name="mother_lastname"
				type="text"
				label="COM_SCHOOLTRIX_MOTHER_LASTNAME_LABEL"
				default=""
			/>

			<field
				name="mother_contact"
				type="text"
				label="COM_SCHOOLTRIX_MOTHER_CONTACT_LABEL"
				default=""
			/>

			<field
				name="mother_email"
				type="text"
				label="COM_SCHOOLTRIX_MOTHER_EMAIL_LABEL"
				default=""
			/>

			<field
				name="mother_occupation"
				type="list"
				label="COM_SCHOOLTRIX_MOTHER_OCCUPATION_LABEL"
				default="0"
				validate="options"
				>
				<option value="0">COM_SCHOOLTRIX_OCCUPATION_HOUSEWIFE</option>
				<option value="1">COM_SCHOOLTRIX_OCCUPATION_SERVICE</option>
				<option value="1">COM_SCHOOLTRIX_OCCUPATION_BUSINESS</option>
				<option value="1">COM_SCHOOLTRIX_OCCUPATION_PROFESSION</option>
			</field>

			<field
				name="father_firstname"
				type="text"
				label="COM_SCHOOLTRIX_FATHER_FIRSTNAME_LABEL"
				default=""
			/>

			<field
				name="father_middlename"
				type="text"
				label="COM_SCHOOLTRIX_FATHER_MIDDLENAME_LABEL"
				default=""
			/>

			<field
				name="father_lastname"
				type="text"
				label="COM_SCHOOLTRIX_FATHER_LASTNAME_LABEL"
				default=""
			/>

			<field
				name="father_contact"
				type="text"
				label="COM_SCHOOLTRIX_FATHER_CONTACT_LABEL"
				default=""
			/>

			<field
				name="father_email"
				type="text"
				label="COM_SCHOOLTRIX_FATHER_EMAIL_LABEL"
				default=""
			/>

			<field
				name="father_occupation"
				type="list"
				label="COM_SCHOOLTRIX_FATHER_OCCUPATION_LABEL"
				default="0"
				validate="options"
				>
				<option value="0">COM_SCHOOLTRIX_OCCUPATION_HOUSEWIFE</option>
				<option value="1">COM_SCHOOLTRIX_OCCUPATION_SERVICE</option>
				<option value="1">COM_SCHOOLTRIX_OCCUPATION_BUSINESS</option>
				<option value="1">COM_SCHOOLTRIX_OCCUPATION_PROFESSION</option>
			</field>

			
		</fieldset>
	</fields>
</form>
